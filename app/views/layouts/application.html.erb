<!DOCTYPE html>
<html>
<head>
  <title>LittleShop</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  Cart: <%= @cart.total %>
  <% flash.each do |type, message| %>
    <%= content_tag :div, message, class: "flash_#{type}" %>
  <% end %>

<%= yield %>

</body>
</html>
